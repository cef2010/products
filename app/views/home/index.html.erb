<h1 class='center-align'>Products I Hate</h1>
<hr />
<div class='container'>
  <div class="row center">
    <button class="btn" id="add_button">Add Crap</button>
  </div>

  <div class="row">
    <form id="add_new_form" class="col s12 m6 offset-m3 hide">
      <div class="row">
        <div class="input-field col s12">
          <input id="product_name" type="text">
          <label for="product_name">Product Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="product_description" type="text">
          <label for="product_description">Description</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="product_color" type="text">
          <label for="product_color">Color</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="product_weight" type="text">
          <label for="product_weight">Weight</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="product_quantity" type="text">
          <label for="product_quantity">Quantity</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="product_price" type="text">
          <label for="product_price">Price</label>
        </div>
      </div>
      <div class="row center">
        <button id="add_a_piece" class="btn center">Add Another Piece of Crap</button>
      </div>
    </form>
  </div>

  <div id='turd' class='row'>
  </div>
</div>
